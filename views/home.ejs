<h1> New Generations Coders: <%= title%>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>

</section>

<% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Tpye here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <%} %>
        <ul id="post-cont">
            <% for(post of posts){%>
                 <%-include("_post")-%> 
                <%} %>

        </ul>
        <% if(locals.user){%>
        <section id="user-friends">
            <h4>Friends</h4>
            <% for(u of all_users){%>
                <p>
                    <a href="/users/profile/<%= u.id%>"><%=u.name%></a>
                </p>
               <%} %>
        </section>
        <%} %>