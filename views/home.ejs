<h1>Codeial | <%= title%>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>

</section>

<% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Tpye here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <%} %>
        <ul id="post-cont">
            <% for(post of posts){%>
                <li class="posts">
                    <h2>
                        <%= post.content %>
                    </h2>
                    <h4>
                        <%= post.user.name %>
                    </h4>

                </li>
                <%} %>

        </ul>